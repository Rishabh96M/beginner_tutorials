<launch>
  <node name="listener_node" pkg="beginner_tutorials" type="listener" output="screen"/>
  <node name="talker_node" pkg="beginner_tutorials" type="talker" output="screen" args="$(arg rate)"/>
  <node pkg="rosbag" type="record" name="rosbag_data" output="screen" args="-O $(find beginner_tutorials)/results/rosbag_chatter_results.bag --duration=15 --all" if="$(arg record)"/>
</launch>

